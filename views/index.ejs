<!DOCTYPE html>
<link rel="stylesheet" type="text/css" href="/views/styles.css">
<html>
<head>
  <title>WhatsApp Essentials</title>
</head>
<body>
    <h1>WhatsApp Status</h1>
    <a href="/gallery">Whatsapp Gallery</a>
    <!-- Status selection form -->
    <div class="form-container">
      <form class="status-form" action="/status" method="POST">
        <label class="status-label" for="status">Change Status:</label>
        <select class="status-input" name="status" id="status">
          <option value="online">Online</option>
          <option value="busy">Busy</option>
          <option value="school">School</option>
          <option value="vanish">Vanish</option>
        </select>
        <button class="status-submit" type="submit">Save</button>
      </form>
    </div>
  
    <!-- Current status display -->
    <div class="current-status">
      Current Status: <%= status %>
    </div>
  </body>
</html>

<style>
    * {
  text-align: center;
}

.form-container {
  margin-bottom: 20px;
}

.status-form {
  display: flex;
  align-items: center;
  justify-content: center; /* Added to center the form horizontally */
}

.status-label {
  margin-right: 10px;
}

.status-input {
  margin-right: 10px;
}

.status-submit {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 8px 16px;
  cursor: pointer;
}

/* Styles for displaying the current status */
.current-status {
  font-weight: bold;
  margin-bottom: 10px;
}

a {
  color: black;
    font-size: 20px;
}
</style>
